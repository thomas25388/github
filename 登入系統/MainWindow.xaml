<Window x:Class="登入系統.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:登入系統"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBlock HorizontalAlignment="Left" Margin="94,75,0,0" TextWrapping="Wrap" Text="帳號" VerticalAlignment="Top" Height="29" Width="48" FontSize="22"/>
        <TextBox x:Name="txtusername" HorizontalAlignment="Left" Margin="167,75,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="390" FontSize="20"/>
        <TextBlock HorizontalAlignment="Left" Margin="94,189,0,0" TextWrapping="Wrap" Text="密碼" VerticalAlignment="Top" FontSize="22"/>
        <TextBox x:Name="txtpassword" HorizontalAlignment="Left" Margin="167,190,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="390" FontSize="20"/>
        <Button x:Name="btnlogin" Content="登入" HorizontalAlignment="Left" Margin="311,260,0,0" VerticalAlignment="Top" Height="40" Width="89" FontSize="22"  Click="btnlogin_Click"/>
        <TextBox x:Name="txtmessage" HorizontalAlignment="Left" Margin="167,329,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="390" FontSize="20"/>

    </Grid>
</Window>
